{
  "name": "esfx-monorepo",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/esfx/esfx.git"
  },
  "scripts": {
    "test": "gulp test",
    "prebuild-js": "yarn workspace @esfx/canceltoken run prebuild && yarn workspace @esfx/equatable run prebuild",
    "build-js": "gulp ci --no-prebuild",
    "build-windows": "yarn workspace @esfx/equatable run package-node-win32-x64",
    "build-linux": "yarn workspace @esfx/equatable run package-node-linux-x64",
    "build-macos": "yarn workspace @esfx/equatable run package-node-darwin-x64"
  },
  "bugs": {
    "url": "https://github.com/esfx/esfx/issues"
  },
  "workspaces": {
    "packages": [
      "internal/*",
      "packages/*"
    ],
    "nohoist": [
      "**/@mapbox/node-pre-gyp",
      "**/@octokit/rest",
      "**/@octokit/rest/**",
      "**/@octokit/core",
      "**/@octokit/core/**",
      "**/node-pre-gyp-github",
      "**/node-pre-gyp-github/**",
      "**/is-plain-object",
      "**/is-plain-object/**"
    ]
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.15.3",
    "@microsoft/api-extractor": "^7.19.4",
    "@microsoft/api-extractor-model": "^7.15.3",
    "@microsoft/tsdoc": "^0.13.2",
    "@microsoft/tsdoc-config": "^0.15.2",
    "@types/graceful-fs": "^4.1.4",
    "@types/jest": "^26.0.22",
    "@types/node": "^17.0.23",
    "@types/node-fetch": "^2.5.10",
    "benchmark": "^2.1.4",
    "chalk": "^2.4.2",
    "commander": "^9.4.0",
    "del": "^3.0.0",
    "diff": "^5.0.0",
    "extract-zip": "^2.0.1",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "is-core-module": "^2.2.0",
    "jest": "^26.6.3",
    "jest-performance": "^2.1.0",
    "js-yaml": "^3.13.1",
    "lerna": "^3.22.1",
    "node-fetch": "^2.6.1",
    "npm-packlist": "^5.1.3",
    "prompts": "^2.4.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.6.1-rc",
    "yargs": "^16.2.0",
    "yargs-unparser": "^2.0.0"
  }
}
